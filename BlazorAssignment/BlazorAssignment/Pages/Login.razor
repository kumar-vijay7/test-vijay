@page "/login"



<EditForm Model="@loginuser" OnValidSubmit="@UserAuthenicate">
    <div class="container">
        <div class="card login-card">
            <div class="row no-gutters">
                @*<div class="col-md-5">
                        <img src="~/images/login.jpg" alt="login" class="login-card-img">
                    </div>*@
                <div class="col-md-7">
                    <div class="card-body">
                        @*<div class="brand-wrapper">
                                <img src="~/images/logo.jpg" alt="logo" class="logo">
                            </div>*@
                        <p class="login-card-description">Sign into your account</p>

                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <InputText type="text" @bind-Value="loginuser.UserName" id="email" class="form-control" placeholder="Email address" />
                        </div>
                        <div class="form-group mb-4">
                            <label for="password" class="sr-only">Password</label>
                            <InputText type="password" @bind-Value="loginuser.Password" id="password" class="form-control" placeholder="***********" />
                        </div>
                        <input name="login" id="login" class="btn btn-block login-btn mb-4" type="submit" value="Login">

                        <a href="#!" class="forgot-password-link">Forgot password?</a>
                        <p class="login-card-footer-text">Don't have an account? <a href="#!" class="text-reset">Register here</a></p>
                        <nav class="login-card-footer-nav">
                            <a href="#!">Terms of use.</a>
                            <a href="#!">Privacy policy</a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@code{

    public TblLogin loginuser;
    protected override void OnInitialized()
    {
        loginuser = new TblLogin();
        base.OnInitialized();
    }
    public async void UserAuthenicate()
    {
        string logindata = JsonConvert.SerializeObject(loginuser);
        HttpRequestMessage httpRequestMessage = new HttpRequestMessage();
        httpRequestMessage.Method = new HttpMethod("POST");
        httpRequestMessage.RequestUri = new Uri("http://localhost:52018/api/Login");
        httpRequestMessage.Content = new StringContent(logindata);
        httpRequestMessage.Content.Headers.ContentType
              = new System.Net.Http.Headers.MediaTypeHeaderValue("application/json");
        var response =await httpClient.SendAsync(httpRequestMessage);

        var statuscode = response.StatusCode;
        if (statuscode.ToString() == "OK")
        {
            navigate.NavigateTo("DashBoard");
        }
        else
        {
            navigate.NavigateTo("error");
        }

    }

}